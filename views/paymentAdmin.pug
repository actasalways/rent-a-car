html 
    head
        link(rel='stylesheet', href='../public/css/table.css')

        title Admin
    body
        include adminHeader.pug

        form.example(method='GET', style='margin:auto;max-width:300px')
            input(type='text', placeholder='Search..', name='search')
            button(type='submit')
                i.fa.fa-search
        a(href='/admin')
            button Clear
                i.fas.fa-broom

        table
            tr
                th Sipariş ID
                th Araç ID
                th Müşteri ID

            each payment in payments
                tr
                    td #{payment._id}
                    td #{payment.car_id}
                    td #{payment.user_id}
            

        include footer.pug
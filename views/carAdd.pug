html 
    head
        link(rel='stylesheet', href='../../public/css/login.css')
        link(rel='stylesheet', href='../../public/css/sessionHeader.css')
        link(rel='stylesheet', href='../../public/css/footer.css')

        title Admin
    body
        include adminHeader.pug

        .container
            h3.container-slogan Bilgilerini Güncelle

            form(method='POST')
                input(type='text', placeholder='Marka', name='brand')
                input(type='text', placeholder='Kaç Kişi', name='passengers')
                input(type='text', placeholder='Litre', name='liter')
                input(type='text', placeholder='Kapı', name='doors')
                input(type='text', placeholder='Fiyat', name='price')
                input(type='text', placeholder='Resim URL', name='img_url')
                select(name='available')
                    option(value='1') True
                    option(value='0') False
                input(type='submit', value='Kaydet')

        include footer.pug